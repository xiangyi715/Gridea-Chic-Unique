<!DOCTYPE html>
<html>

<head>
    <%- include('./include/head', { siteTitle: themeConfig.siteName }) %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xiangyi715/Gridea-Chic-Unique@1.0.0/assets/media/live2d/css/live2d.css" />
</head>

<body>

    <div class="wrapper">

        <%- include('./include/header') %>
            <div class="main">
                <div class="container">
                    <div class="intro">
                        <div class="avatar">
                            <a href="<%= themeConfig.domain %>"><img src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>"></a>
                        </div>
                        <div class="nickname">
                            <%= site.customConfig.author%>
                        </div>
                        <div class="description">
                            <%= site.customConfig.description%>
                        </div>
                        <div class="links">
                            <% ['rss','twitter', 'facebook', 'github', 'linkedin', 'youtube','instagram','weibo','qq','send'].forEach((item) => { %>
                                <% if (site.customConfig[item]) { %>
                                    <a class="link-item" href="<%= site.customConfig[item] %>" title="<%- item %>"><i class="fa fa-<%= item %>"></i></a>
                                    <% } %>
                                        <% }); %>
                        </div>
                    </div>
                </div>

            </div>

    </div>

<script src="https://instant.page/1.2.2" type="module" integrity="sha384-2xV8M5griQmzyiY3CDqh1dn4z3llDVqZDqzjzcY+jCBCk/a5fXJmuZ/40JJAPeoU"></script>

</body>
<%- include('./include/footer') %>

</html>
