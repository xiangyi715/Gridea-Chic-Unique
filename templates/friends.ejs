<!DOCTYPE html>
<html>
<head>
    <% if(site.customConfig.language == "zh"){%>
    <%- include('./include/head', { siteTitle: `\u53CB\u94FE | ${themeConfig.siteName}` }) %>
    <% }else{%>
    <%- include('./include/head', { siteTitle: `Friends | ${themeConfig.siteName}` }) %>
    <%}%>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xiangyi715/Gridea-Chic-Unique@latest/assets/media/live2d/css/live2d.css" />
</head>
<body>
    <div class="wrapper">
        <%- include('./include/header') %>
    <div class="main">
        <div class="container">
            <article class="post-wrap">
                <header class="post-header">
                    <h1 class="post-title zh">
                        &#x53CB;&#x94FE;
                    </h1>
                    <h1 class="post-title en">
                        Friends
                    </h1>
                </header>
                <div class="post-content">
                    <% if (site.customConfig.friends) { %>
                    <% site.customConfig.friends.forEach(function(friend) { %>
                    <div class="friend-box">
                        <img class="friend-avatar" src="<%= friend.siteLogo %>">
                        <div class="flink-info">
                            <a href="<%= friend.siteLink %>" target="_blank">
                                <%= friend.siteName %>
                            </a>
                            <br />
                            <%= friend.description %>
                        </div>
                    </div>
                    <% }); %>
                    <% } %>
                </div>
<!--
			<div id="vcomments"></div>
		        <script>
		           new Valine({
		           el: '#vcomments',
		           appId: '<%=site.customConfig.VlineAppID%>',
		           appKey: '<%=site.customConfig.VlineAppKey%>',
		           path: window.location.pathname,
		           pageSize: 30,
		           avatar:'mm',
		           notify:true,
		           placeholder: '评论前请填写好昵称👆生成头像请到https://cn.gravatar.com/官网注册:D'
		                     })
		           </script>
-->
            </article>
        </div>
    </div>
    </div>
    <%- include('./include/footer') %>
<script src="//instant.page/3.0.0" type="module" defer integrity="sha384-OeDn4XE77tdHo8pGtE1apMPmAipjoxUQ++eeJa6EtJCfHlvijigWiJpD7VDPWXV1"></script>
    </body>
</html>
